{
  "name": "event-four-you-siae-lettore",
  "version": "1.0.0",
  "description": "Event Four You SIAE Lettore - Smart Card Reader per MiniLector EVO V3",
  "main": "main.js",
  "author": "Event Four You",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.eventfouryou.siae.lettore",
    "productName": "Event Four You SIAE Lettore",
    "copyright": "Copyright Â© 2024 Event Four You",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Event Four You SIAE Lettore",
      "language": "1040"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "renderer.js"
    ],
    "extraResources": [
      {
        "from": "SiaeBridge/bin/Release/net472/",
        "to": "SiaeBridge/net472",
        "filter": ["**/*"]
      },
      {
        "from": "../attached_assets/libSIAE*.dll",
        "to": "SiaeBridge/net472/libSIAE.dll"
      }
    ]
  }
}
